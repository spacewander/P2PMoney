<%= bootstrap_form_for(@user, :layout => :horizontal) do |f| %>
  <div class="field">
    <%= f.text_field :username, :size => 30, :label => '用户名' %>
  </div>
  <div class="field">
    <%= f.password_field :password, :size => 30, :label => '密码' %>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, :size => 30, :label => '确认密码' %>
  </div>
  <div class="field">
    <%= f.text_field :telephone, :size => 12, :label => '手机号码' %>
  </div>
  <div class="field">
    <%= f.email_field :email, :label => '常用邮箱' %>
  </div>
  <div class="field">
    <%= f.text_field :real_name, :size => 12, :label => '真实姓名' %>
  </div>
  <div class="field">
    <%= f.text_field :id_card_num, :size => 12, :label => '身份证号码' %>
  </div>
  <div class="field">
    <div class="col-sm-offset-2">
      <input type="checkbox" id="accept" checked>
  	  <label for="accept">同意并遵循条款信息</label>
    </div>
  </div>
  
  <div class="actions">
    <div class="col-sm-offset-2">
      <%= f.submit '免费注册' %>
    </div>
  </div>
<% end %>
